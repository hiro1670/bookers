<h1>Editing Book</h1>
  <% if @book.errors.any? %>
    <%= @book.errors.count %> errors prohibited this book from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

 <%= form_with model: @book do |f| %>
  
<div class="book-edit">
    <div><h4>Title</h4>
  <%= f.text_field :title %>
    </div>
    
    <div><h4>Body</h4>
  <%= f.text_area :body %>
    </div>
    
  <div class="book-update"><%= f.submit 'Update Book' %></div>
  
 <div class="edit-show"><%= link_to 'Show', book_path(@book.id) %>
 <div class="edit-back"><%= link_to 'Back', '/books' %></div>
<% end %>
</div>
</div>